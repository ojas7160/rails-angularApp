<div class="container">
  <div class="" style="padding:35px 50px;">
    <h4><span class="glyphicon glyphicon-lock"></span> SignUp</h4>
  </div>
  <div style="padding: 40px 50px;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email do %>
          <span class="glyphicon glyphicon-user"></span>Email
        <% end %> <br />
        <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password do %>
          <span class="glyphicon glyphicon-eye-open"></span> Password
        <% end %><br />
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation do %>
          <span class="glyphicon glyphicon-eye-open"></span> Password Confirmation
        <% end %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>


